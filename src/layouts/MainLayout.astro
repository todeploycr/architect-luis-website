---
import "@/styles/global.css"
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "LARQ Arquitectura", 
  description = "Arquitectura moderna, funcional y sostenible. Proyectos residenciales y comerciales." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <Header />
    
    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>