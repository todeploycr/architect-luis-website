---
// src/components/sections/ContactSection.astro
const contactInfo = [
  {
    name: "Phone",
    title: "Teléfono",
    content: ["+506 8897 2353"],
  },
  {
    name: "Mail",
    title: "Email",
    content: ["larq@gmail.com"],
  },
  {
    name: "Clock",
    title: "Horario",
    content: ["Lunes a Viernes", "8:00 AM - 5:00 PM"],
  },
];
---

<section class="py-12 md:py-16 lg:py-20 bg-[#E3D9C6]/20">
  <div class="container-corporate px-4 md:px-6">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-10 md:mb-12 lg:mb-16">
      <span class="text-[#4C9141] font-medium tracking-[0.3em] text-xs uppercase mb-3 md:mb-4 block">
        CONTACTO
      </span>
      <h2 class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-serif font-normal text-[#3D3635] leading-tight mb-4 md:mb-6 px-4">
        Iniciemos su próximo proyecto
      </h2>
      <p class="text-[#3D3635]/60 leading-relaxed text-sm md:text-base px-4">
        Estamos listos para escuchar sus ideas y convertirlas en realidad. 
        Contáctenos para una consulta inicial sin compromiso.
      </p>
    </div>

    <div class="grid lg:grid-cols-5 gap-8 md:gap-10 lg:gap-12">
      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-4 md:space-y-6">
        {contactInfo.map((info) => (
          <div class="flex gap-3 md:gap-4">
            <div class="shrink-0 w-10 h-10 md:w-12 md:h-12 bg-[#4C9141] rounded-sm flex items-center justify-center">
              {info.name === "Phone" && (
                <svg class="w-4 h-4 md:w-5 md:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              )}
              {info.name === "Mail" && (
                <svg class="w-4 h-4 md:w-5 md:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              )}
              {info.name === "Clock" && (
                <svg class="w-4 h-4 md:w-5 md:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              )}
            </div>
            <div>
              <h4 class="font-semibold text-[#3D3635] mb-1 md:mb-2 text-sm md:text-base">{info.title}</h4>
              {info.content.map((line) => (
                <p class="text-[#3D3635]/60 text-xs md:text-sm">
                  {line}
                </p>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3 mt-6 lg:mt-0">
        <form
          id="contact-form"
          class="bg-white rounded-sm p-6 md:p-8 shadow-sm"
        >
          <div class="grid md:grid-cols-2 gap-4 md:gap-6 mb-4 md:mb-6">
            <div>
              <label class="block text-xs md:text-sm font-medium text-[#3D3635] mb-1.5 md:mb-2">
                Nombre completo
              </label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-3 py-2.5 md:px-4 md:py-3 text-sm md:text-base bg-[#F5F5F5] border border-[#E3D9C6] rounded-sm focus:outline-none focus:ring-2 focus:ring-[#4C9141]/30 focus:border-[#4C9141] transition-colors text-[#3D3635] placeholder:text-[#3D3635]/40"
                placeholder="Su nombre"
              />
            </div>
            <div>
              <label class="block text-xs md:text-sm font-medium text-[#3D3635] mb-1.5 md:mb-2">
                Empresa / Organización
              </label>
              <input
                type="text"
                name="company"
                class="w-full px-3 py-2.5 md:px-4 md:py-3 text-sm md:text-base bg-[#F5F5F5] border border-[#E3D9C6] rounded-sm focus:outline-none focus:ring-2 focus:ring-[#4C9141]/30 focus:border-[#4C9141] transition-colors text-[#3D3635] placeholder:text-[#3D3635]/40"
                placeholder="Nombre de empresa"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-4 md:gap-6 mb-4 md:mb-6">
            <div>
              <label class="block text-xs md:text-sm font-medium text-[#3D3635] mb-1.5 md:mb-2">
                Correo electrónico
              </label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-3 py-2.5 md:px-4 md:py-3 text-sm md:text-base bg-[#F5F5F5] border border-[#E3D9C6] rounded-sm focus:outline-none focus:ring-2 focus:ring-[#4C9141]/30 focus:border-[#4C9141] transition-colors text-[#3D3635] placeholder:text-[#3D3635]/40"
                placeholder="correo@ejemplo.com"
              />
            </div>
            <div>
              <label class="block text-xs md:text-sm font-medium text-[#3D3635] mb-1.5 md:mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                name="phone"
                class="w-full px-3 py-2.5 md:px-4 md:py-3 text-sm md:text-base bg-[#F5F5F5] border border-[#E3D9C6] rounded-sm focus:outline-none focus:ring-2 focus:ring-[#4C9141]/30 focus:border-[#4C9141] transition-colors text-[#3D3635] placeholder:text-[#3D3635]/40"
                placeholder="+506 8897 2353"
              />
            </div>
          </div>

          <div class="mb-4 md:mb-6">
            <label class="block text-xs md:text-sm font-medium text-[#3D3635] mb-1.5 md:mb-2">
              Tipo de proyecto
            </label>
            <select
              name="project-type"
              class="w-full px-3 py-2.5 md:px-4 md:py-3 text-sm md:text-base bg-[#F5F5F5] border border-[#E3D9C6] rounded-sm focus:outline-none focus:ring-2 focus:ring-[#4C9141]/30 focus:border-[#4C9141] transition-colors text-[#3D3635]"
            >
              <option value="">Seleccione una opción</option>
              <option value="residencial">Arquitectura Residencial</option>
              <option value="comercial">Arquitectura Comercial</option>
              <option value="interiores">Diseño de Interiores</option>
              <option value="bioclimatico">Arquitectura Bioclimática</option>
              <option value="consultoria">Consultoría</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div class="mb-4 md:mb-6">
            <label class="block text-xs md:text-sm font-medium text-[#3D3635] mb-1.5 md:mb-2">
              Mensaje
            </label>
            <textarea
              name="message"
              required
              rows="5"
              class="w-full px-3 py-2.5 md:px-4 md:py-3 text-sm md:text-base bg-[#F5F5F5] border border-[#E3D9C6] rounded-sm focus:outline-none focus:ring-2 focus:ring-[#4C9141]/30 focus:border-[#4C9141] transition-colors resize-none text-[#3D3635] placeholder:text-[#3D3635]/40"
              placeholder="Cuéntenos sobre su proyecto..."
            />
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full bg-[#E2C200] hover:bg-[#E2C200]/90 text-[#3D3635] px-6 py-3 md:px-8 md:py-4 text-sm md:text-base font-semibold tracking-wide transition-all duration-300 rounded-sm flex items-center justify-center gap-2"
          >
            <span id="btn-text">Enviar Mensaje</span>
            <svg id="send-icon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
            </svg>
          </button>
        </form>

        <!-- Toast notification -->
        <div
          id="toast"
          class="fixed bottom-4 right-4 left-4 md:left-auto md:right-4 md:w-auto bg-white border border-[#E3D9C6] rounded-sm shadow-lg p-4 transform translate-y-full opacity-0 transition-all duration-300 z-50"
        >
          <h4 class="font-semibold text-[#3D3635] mb-1 text-sm md:text-base">Mensaje enviado</h4>
          <p class="text-xs md:text-sm text-[#3D3635]/60">Nos pondremos en contacto con usted pronto.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Form submission
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text') as HTMLSpanElement;
  const toast = document.getElementById('toast') as HTMLDivElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Disable button and show loading state
    submitBtn?.setAttribute('disabled', 'true');
    submitBtn?.classList.add('opacity-75', 'cursor-not-allowed');
    if (btnText) btnText.textContent = 'Enviando...';
    
    // Simulate form submission
    await new Promise((resolve) => setTimeout(resolve, 1000));
    
    // Show toast notification
    if (toast) {
      toast.style.transform = 'translateY(0)';
      toast.style.opacity = '1';
      
      // Hide toast after 3 seconds
      setTimeout(() => {
        toast.style.transform = 'translateY(100%)';
        toast.style.opacity = '0';
      }, 3000);
    }
    
    // Reset form and button
    form.reset();
    submitBtn?.removeAttribute('disabled');
    submitBtn?.classList.remove('opacity-75', 'cursor-not-allowed');
    if (btnText) btnText.textContent = 'Enviar Mensaje';
  });
</script>