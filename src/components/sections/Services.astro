---
// src/components/sections/Services.astro
const services = [
  {
    icon: "Home",
    title: "Arquitectura Residencial",
    description:
      "Diseño de viviendas unifamiliares, condominios y desarrollos habitacionales con enfoque en confort, funcionalidad y estética.",
    features: ["Casas unifamiliares", "Apartamentos", "Desarrollos residenciales"],
  },
  {
    icon: "Building",
    title: "Arquitectura Comercial",
    description:
      "Proyectos comerciales e institucionales que maximizan la eficiencia espacial y refuerzan la identidad corporativa de nuestros clientes.",
    features: ["Oficinas corporativas", "Centros comerciales", "Hoteles y resorts"],
  },
  {
    icon: "PenTool",
    title: "Diseño de Interiores",
    description:
      "Creación de ambientes interiores que optimizan la experiencia del usuario, integrando mobiliario, iluminación y acabados.",
    features: ["Espacios residenciales", "Oficinas", "Locales comerciales"],
  },
  {
    icon: "TreePine",
    title: "Arquitectura Bioclimática",
    description:
      "Creamos espacios que favorecen el confort térmico, la iluminación natural y la conexión con la naturaleza.",
    features: ["Ventilación natural", "Iluminación estratégica", "Diseño centrado en el usuario"],
  },
];
---

<section class="py-20 bg-[#E3D9C6]/30">
  <div class="container-corporate">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="text-[#E2C200] font-medium tracking-[0.3em] text-xs uppercase mb-4 block">
        NUESTROS SERVICIOS
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-normal text-[#3D3635] leading-tight mb-6">
        Soluciones arquitectónicas integrales
      </h2>
      <p class="text-[#3D3635]/60 leading-relaxed text-base">
        Ofrecemos un portafolio completo de servicios profesionales para satisfacer 
        las necesidades de proyectos de cualquier escala y complejidad.
      </p>
    </div>

    <!-- Mobile: Carousel con navegación -->
    <div class="md:hidden">
      <div class="overflow-hidden relative">
        <div id="services-track-mobile" class="flex transition-transform duration-500 ease-in-out">
          {services.map((service) => (
            <div class="shrink-0 w-full px-4">
              <div class="bg-white rounded-sm p-8 hover:shadow-xl transition-shadow duration-300 min-h-112.5 max-h-112.5 flex flex-col">
                <!-- Icon -->
                <div class="w-14 h-14 bg-transparent rounded-sm flex items-center justify-center mb-6">
                  {service.icon === "Home" && (
                    <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                    </svg>
                  )}
                  {service.icon === "Building" && (
                    <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                  )}
                  {service.icon === "PenTool" && (
                    <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                    </svg>
                  )}
                  {service.icon === "TreePine" && (
                    <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                    </svg>
                  )}
                </div>

                <!-- Title -->
                <h3 class="text-xl font-serif font-normal text-[#3D3635] mb-3">
                  {service.title}
                </h3>

                <!-- Description -->
                <p class="text-[#3D3635]/60 text-sm leading-relaxed mb-6">
                  {service.description}
                </p>

                <!-- Features List -->
                <ul class="space-y-2 mt-auto">
                  {service.features.map((feature) => (
                    <li class="text-sm text-[#3D3635]/70 flex items-start gap-2">
                      <span class="w-1.5 h-1.5 bg-[#3D3635] rounded-full mt-1.5 shrink-0" />
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Controls -->
      <div class="flex items-center justify-center gap-4 mt-8">
        <!-- Previous Button -->
        <button
          id="prev-mobile"
          class="w-10 h-10 bg-[#3D3635] text-white rounded-full flex items-center justify-center hover:bg-[#3D3635]/80 transition-colors"
          aria-label="Servicio anterior"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>

        <!-- Dots Indicators -->
        <div class="flex gap-2">
          {services.map((_, index) => (
            <button
              class="dot w-2.5 h-2.5 rounded-full bg-gray-300 transition-all duration-300"
              data-index={index}
              aria-label={`Ir a servicio ${index + 1}`}
            ></button>
          ))}
        </div>

        <!-- Next Button -->
        <button
          id="next-mobile"
          class="w-10 h-10 bg-[#3D3635] text-white rounded-full flex items-center justify-center hover:bg-[#3D3635]/80 transition-colors"
          aria-label="Siguiente servicio"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Tablet & Desktop: Grid (mantiene el diseño original) -->
    <div class="hidden md:grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-white rounded-sm p-8 hover:shadow-xl transition-shadow duration-300">
          <!-- Icon -->
          <div class="w-14 h-14 bg-transparent rounded-sm flex items-center justify-center mb-6">
            {service.icon === "Home" && (
              <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
            )}
            {service.icon === "Building" && (
              <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            )}
            {service.icon === "PenTool" && (
              <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
            )}
            {service.icon === "TreePine" && (
              <svg class="w-7 h-7 text-[#3D3635]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            )}
          </div>

          <!-- Title -->
          <h3 class="text-xl font-serif font-normal text-[#3D3635] mb-3">
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-[#3D3635]/60 text-sm leading-relaxed mb-5">
            {service.description}
          </p>

          <!-- Features List -->
          <ul class="space-y-2 mb-6">
            {service.features.map((feature) => (
              <li class="text-sm text-[#3D3635]/70 flex items-start gap-2">
                <span class="w-1.5 h-1.5 bg-[#3D3635] rounded-full mt-1.5 shrink-0" />
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  // ===== MOBILE CAROUSEL =====
  const trackMobile = document.getElementById('services-track-mobile');
  const prevBtnMobile = document.getElementById('prev-mobile');
  const nextBtnMobile = document.getElementById('next-mobile');
  const dots = document.querySelectorAll('.dot');
  let currentIndexMobile = 0;
  const totalServices = 6;

  function updateCarouselMobile(index: number) {
    if (!trackMobile) return;
    
    currentIndexMobile = index;
    const offset = currentIndexMobile * 100;
    trackMobile.style.transform = `translateX(-${offset}%)`;
    
    // Update dots
    dots.forEach((dot, i) => {
      if (i === currentIndexMobile) {
        dot.classList.add('bg-[#3D3635]', 'w-8');
        dot.classList.remove('bg-gray-300', 'w-2.5');
      } else {
        dot.classList.remove('bg-[#3D3635]', 'w-8');
        dot.classList.add('bg-gray-300', 'w-2.5');
      }
    });
  }

  prevBtnMobile?.addEventListener('click', () => {
    const newIndex = currentIndexMobile === 0 ? totalServices - 1 : currentIndexMobile - 1;
    updateCarouselMobile(newIndex);
  });

  nextBtnMobile?.addEventListener('click', () => {
    const newIndex = currentIndexMobile === totalServices - 1 ? 0 : currentIndexMobile + 1;
    updateCarouselMobile(newIndex);
  });

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      updateCarouselMobile(index);
    });
  });

  // Initialize
  updateCarouselMobile(0);
</script>