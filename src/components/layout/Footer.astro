---
// Footer.astro
import logoLarq from '@/assets/img/logo-larq.png';

const footerLinks = {
  servicios: [
    { name: "Arquitectura Residencial", href: "/services-page" },
    { name: "Arquitectura Comercial", href: "/services-page" },
    { name: "Diseño de Interiores", href: "/services-page" },
    { name: "Arquitectura Bioclimática", href: "/services-page" },
    { name: "Consultoría", href: "/services-page" },
  ],
  empresa: [
    { name: "Sobre Nosotros", href: "/about" },
    { name: "Proyectos", href: "/projects-page" },
    { name: "Testimonios", href: "/about#testimonios" },
    { name: "Trabaje con Nosotros", href: "/contact" },
  ],
};

const socialLinks = [
  { name: "Instagram", href: "https://www.instagram.com/larq_cr/", label: "Instagram" },
  { name: "WhatsApp", href: "https://wa.me/50688972353?text=Hola%20,%20me%20gustaría%20consultar%20sobre%20sus%20servicios", label: "WhatsApp" },
];
---

<footer class="bg-[#3D3635] text-white">
  <!-- Main Footer -->
  <div class="container-corporate py-16">
    <!--
      En mobile: 1 columna (Brand y Contacto apilados, Servicios/Empresa ocultos)
      En md:    2 columnas
      En lg:    4 columnas (todo visible)
    -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">

      <!-- Brand (siempre visible) -->
      <div>
        <div class="flex items-center gap-2.5 mb-6">
          <img
            src={logoLarq.src}
            alt="LARQ Arquitectura"
            class="h-10"
          />
          <div class="flex flex-col leading-none justify-center">
            <span class="text-white text-sm md:text-base font-bold tracking-wide">LARQ</span>
            <span class="text-white/90 text-[8px] md:text-[9px] font-light tracking-[0.2em] uppercase mt-0.5">ARQUITECTURA</span>
          </div>
        </div>
        <p class="text-white/70 leading-relaxed mb-6 text-sm">
          Estudio de arquitectura dedicado a crear espacios que transforman 
          la forma de vivir, trabajar y experimentar el entorno construido.
        </p>
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.label}
              class="w-10 h-10 bg-white/10 rounded-sm flex items-center justify-center hover:bg-[#E2C200]/70 transition-colors duration-300"
            >
              {social.name === "Instagram" && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
                </svg>
              )}
              {social.name === "WhatsApp" && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Services (solo visible en md+) -->
      <div class="hidden md:block">
        <h4 class="font-serif text-xl mb-6">Servicios</h4>
        <ul class="space-y-3">
          {footerLinks.servicios.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-white/70 hover:text-[#E2C200]/70 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company (solo visible en lg+) -->
      <div class="hidden lg:block">
        <h4 class="font-serif text-xl mb-6">Empresa</h4>
        <ul class="space-y-3">
          {footerLinks.empresa.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-white/70 hover:text-[#E2C200]/70 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact (siempre visible) -->
      <div>
        <h4 class="font-serif text-xl mb-6">Contacto</h4>
        <ul class="space-y-2 text-sm text-white/70">
          <li>Heredia, Costa Rica</li>
          <li>+506 8897 2353</li>
          <li>larq@gmail.com</li>
        </ul>
      </div>

    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="container-corporate py-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-white/50 text-center md:text-left">
        © 2024 LARQ Arquitectura. Todos los derechos reservados.
      </p>
      <button
        id="scroll-to-top"
        class="w-10 h-10 bg-[#E2C200] rounded-sm flex items-center justify-center hover:bg-[#E2C200]/90 transition-all duration-300 hover:scale-110 active:scale-90"
        aria-label="Volver arriba"
      >
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
      </button>
    </div>
  </div>
</footer>

<script>
  const scrollButton = document.getElementById("scroll-to-top");
  scrollButton?.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>