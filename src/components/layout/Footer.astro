---
// Footer.astro
const footerLinks = {
  servicios: [
    { name: "Arquitectura Residencial", href: "#servicios" },
    { name: "Arquitectura Comercial", href: "#servicios" },
    { name: "Diseño de Interiores", href: "#servicios" },
    { name: "Arquitectura Bioclimática", href: "#servicios" },
    { name: "Consultoría", href: "#servicios" },
  ],
  empresa: [
    { name: "Sobre Nosotros", href: "#nosotros" },
    { name: "Proyectos", href: "#proyectos" },
    { name: "Testimonios", href: "#testimonios" },
    { name: "Trabaje con Nosotros", href: "#contacto" },
  ],
  legal: [
    { name: "Política de Privacidad", href: "#" },
    { name: "Términos de Servicio", href: "#" },
    { name: "Aviso Legal", href: "#" },
  ],
};

const socialLinks = [
  { name: "Facebook", href: "#", label: "Facebook" },
  { name: "Instagram", href: "#", label: "Instagram" },
  { name: "Linkedin", href: "#", label: "LinkedIn" },
  { name: "Youtube", href: "#", label: "YouTube" },
];
---

<footer class="bg-corporate-dark text-corporate-dark-foreground">
  <!-- Main Footer -->
  <div class="container-corporate py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <img
          src="/assets/logo-larq.png"
          alt="LARQ Arquitectura"
          class="h-12 mb-6"
        />
        <p class="text-corporate-dark-foreground/70 leading-relaxed mb-6 max-w-sm">
          Estudio de arquitectura dedicado a crear espacios que transforman 
          la forma de vivir, trabajar y experimentar el entorno construido.
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              aria-label={social.label}
              class="w-10 h-10 bg-corporate-dark-foreground/10 rounded-sm flex items-center justify-center hover:bg-primary transition-colors duration-300"
            >
              {social.name === "Facebook" && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.name === "Instagram" && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
                </svg>
              )}
              {social.name === "Linkedin" && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.name === "Youtube" && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Servicios</h4>
        <ul class="space-y-3">
          {footerLinks.servicios.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-corporate-dark-foreground/70 hover:text-cta transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Empresa</h4>
        <ul class="space-y-3">
          {footerLinks.empresa.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-corporate-dark-foreground/70 hover:text-cta transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-lg mb-4">Contacto</h4>
        <ul class="space-y-3 text-sm text-corporate-dark-foreground/70">
          <li>Edificio Corporativo LARQ</li>
          <li>Av. Principal 500, Liberia</li>
          <li>Guanacaste, Costa Rica</li>
          <li class="pt-2">+506 2666-0000</li>
          <li>info@larq.cr</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-corporate-dark-foreground/10">
    <div class="container-corporate py-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-corporate-dark-foreground/50 text-center md:text-left">
        © 2024 LARQ Arquitectura. Todos los derechos reservados.
      </p>
      <div class="flex items-center gap-6">
        {footerLinks.legal.map((link) => (
          <a
            href={link.href}
            class="text-xs text-corporate-dark-foreground/50 hover:text-cta transition-colors duration-300"
          >
            {link.name}
          </a>
        ))}
      </div>
      <button
        id="scroll-to-top"
        class="w-10 h-10 bg-primary rounded-sm flex items-center justify-center hover:bg-cta transition-all duration-300 hover:scale-110 active:scale-90"
        aria-label="Volver arriba"
      >
        <svg class="w-5 h-5 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
      </button>
    </div>
  </div>
</footer>

<script>
  // Scroll to top functionality
  const scrollButton = document.getElementById("scroll-to-top");
  
  scrollButton?.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>